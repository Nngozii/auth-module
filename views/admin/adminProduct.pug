doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Shop
        link(rel="stylesheet", href="/css/shop.css")
    body 
        include ../../includes/navigation.pug 

        main 
            if errorMessage && errorMessage.length
                div.error(style="background-color: #f8d7da; color: #842029; border: 1px solid #f5c2c7; padding: 12px 16px;border-radius: 4px;margin-bottom: 16px;text-align: center;font-size: 14px;width:25rem;")= errorMessage[0]
            if pro.length > 0
                .grid 
                    each prods in pro
                        article.card.product_item
                            header.card__header
                                h1.product__title #{prods.title}: 
                            div.card__image 
                                img(src="https://cdn.pixabay.com/photo/2017/01/06/22/59/sherlock-holmes-book-1959204_1280.jpg", alt="A book")   
                            .card__content 
                                h2.product__price $ #{prods.price}
                                p.product__description #{prods.description} 
                            .card__actions 
                                a(href=`/edit-product/${prods._id}?edit=true`) 
                                    button.btn Edit
                                form(action=`/delete-product/${prods._id}`, method="post") 
                                    button.btn(type="submit") Delete
            else 
                h1 No Products Found 